{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/App.tsx", "src/main.tsx", "src/components/ComingSoon.tsx"],
  "exclude": [
    "src/components/Modules.tsx",
    "src/components/ContentOverwhelmer.tsx",
    "src/components/hero/**/*",
    "src/components/moduleDirectoryDropdown.tsx",
    "src/components/PricingTest.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
